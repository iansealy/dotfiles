# VeraCrypt
alias mnt-crypt='/Applications/VeraCrypt.app/Contents/MacOS/VeraCrypt \
  --text --keyfiles="" --protect-hidden=no /shared/veracrypt.hc ~/mnt/crypt'
alias umnt-crypt='/Applications/VeraCrypt.app/Contents/MacOS/VeraCrypt \
  --dismount /shared/veracrypt.hc && touch /shared/veracrypt.hc'

# VLC
alias vlc='/Applications/VLC.app/Contents/MacOS/VLC -f'

# Komodo Edit
alias komodo='/Applications/Komodo\ Edit\ 8.app/Contents/MacOS/komodo'

# SSH
alias      athome='cat ~/.ssh/.config_home_insidehome  ~/.ssh/.config_other \
  > ~/.ssh/config'
alias atelsewhere='cat ~/.ssh/.config_home_outsidehome ~/.ssh/.config_other \
  > ~/.ssh/config'

# Sanger mounts
alias mnt-sanger-team31='mount_smbfs -o soft \
  //is1@localhost:44500/Team31 ~/mnt/sanger/team31'
alias umnt-sanger-team31='diskutil unmount ~/mnt/sanger/team31'
alias mnt-sanger-zmr='mount_smbfs -o soft \
  //is1@localhost:44500/Zebrafish%20Mutation%20Resource ~/mnt/sanger/zmr'
alias umnt-sanger-zmr='diskutil unmount ~/mnt/sanger/zmr'
alias mnt-sanger-tsd='mount_smbfs -o soft \
  //is1@localhost:44500/team31_shared_docs ~/mnt/sanger/tsd'
alias umnt-sanger-tsd='diskutil unmount ~/mnt/sanger/tsd'
alias mnt-sanger-all='mount_smbfs -o soft \
  //is1@localhost:44500/Team31 ~/mnt/sanger/team31; \
  mount_smbfs -o soft \
  //is1@localhost:44500/Zebrafish%20Mutation%20Resource ~/mnt/sanger/zmr; \
  mount_smbfs -o soft \
  //is1@localhost:44500/team31_shared_docs ~/mnt/sanger/tsd'
alias umnt-sanger-all='diskutil unmount ~/mnt/sanger/team31; \
  diskutil unmount ~/mnt/sanger/zmr; \
  diskutil unmount ~/mnt/sanger/tsd'

# Pico
alias pico=nano

# Todo.txt
alias t='~/checkouts/todo.txt-cli/todo.sh -d ~/.todo'
alias twork='clear; t ls @work; t due @work'
alias trest='clear; t ls -@work; t due -@work'

# LibreOffice
alias openlibre='open -a /Applications/LibreOffice.app/Contents/MacOS/soffice'

# youtube-dl
alias youtube-dl-audio='youtube-dl -o "%(title)s.%(ext)s" \
  --restrict-filenames --extract-audio --audio-format mp3'

# local::lib
alias local-lib-on='eval $(perl -Mlocal::lib)'
alias local-lib-off='eval $(perl -Mlocal::lib=--deactivate-all)'

# abook
alias abook='abook --datafile ~/Dropbox/addressbook'

# DRKSpiderJava
alias drkspider='java -jar ~/Applications/DRKSpiderJava/drkspiderjava.jar'
