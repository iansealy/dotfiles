# Guard against setting environment variables twice
export ENVIRON_SET=1

# Komodo Edit
export PATH="/Applications/Komodo Edit 11.app/Contents/MacOS:$PATH"

# VS Code
export PATH="/Applications/Visual Studio Code.app/Contents/Resources/app/bin:$PATH"

# npm bin
export PATH="$HOME/node_modules/.bin:$PATH"

# Ruby bin
export PATH="$HOME/.gem/ruby/2.7.0/bin:$PATH"

# Python bin
export PATH="$HOME/Library/Python/3.7/bin:$PATH"

# MacPorts
export PATH="/opt/local/libexec/gnubin:/opt/local/bin:/opt/local/sbin:$PATH"

# MacPorts MySQL bin
export PATH="/opt/local/lib/mysql57/bin:$PATH"

# Go
export GOPATH="$HOME/go"
export PATH="${GOPATH//://bin:}/bin:$PATH"

# dasht
export PATH="$HOME/checkouts/dasht/bin:$PATH"

# kent
export PATH="/usr/local/kent:$PATH"

# Personal bin
export PATH="$HOME/bin:$PATH"

# Less
export LESSHISTFILE=-
